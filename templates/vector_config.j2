{{ ansible_managed | comment }}
# vector_config.j2 - конфигурация для Vector
[sources.my_source]
type = "stdin"

[transforms.my_transform]
type = "lua"
inputs = ["my_source"]
source = '''
  function process(event)
    event.host = "{{ vector_host_ip }}"
    return event
  end
'''

[sinks.clickhouse]
type = "clickhouse"
inputs = ["my_transform"]
host = "http://{{ clickhouse_host_ip }}:8123"
database = "default"
table = "logs"
compression = "gzip"
